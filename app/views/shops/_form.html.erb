<div class="mb-3" style="background-color: #5BBBBC;">
  <div class="d-flex justify-content-center align-items-center vh-100">
    <div class="text-center mb-4" style="width: 25rem; border-radius: 10px;">
      <div class="card-body">
        <h1 class="text-center mb-4">Create Your Company</h1>
        <div class="container d-flex justify-content-center align-items-center mb-4" style="width: 147px; height: 44px; background: #cfed58; border-radius: 35px;">
          <h4 class="text-center" style="color: #5bbbbc; margin: 0;">Shop</h4>
        </div>

        <%= simple_form_for shop, html: { class: 'form-horizontal', url: create_step1_shops_path } do |f| %>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= f.input :name, label: false, placeholder: 'Shop Name', input_html: { class: 'text-center form-control-custom', style: 'border-radius: 35px;' } %>
              </div>
              <div class="form-group" >
                <%= f.input :phone, label: false, placeholder: 'Phone Number', input_html: { class: 'text-center form-control-custom', style: 'border-radius: 35px;' } %>
              </div>
              <div class="form-group" >
                <%= f.hidden_field :user_id, value: current_user.id %>
              </div>
              <div class="form-group" >
                <%= f.input :email, label: false, placeholder: 'Email Address', input_html: { class: 'text-center form-control-custom', style: 'border-radius: 35px;' } %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group" >
                <%= f.input :facebook, label: false, placeholder: 'Facebook URL', input_html: { class: 'text-center form-control-custom', style: 'border-radius: 35px;' } %>
              </div>
              <div class="form-group" >
                <%= f.input :website, label: false, placeholder: 'Website URL', input_html: { class: 'text-center form-control-custom', style: 'border-radius: 35px;' } %>
              </div>
              <div class="form-group" >
                <%= f.input :instagram, label: false, placeholder: 'Instagram URL', input_html: { class: 'text-center form-control-custom', style: 'border-radius: 35px;' } %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group" >
                <%= f.input :address, label: false, placeholder: 'Address', input_html: { class: 'text-center form-control-custom', style: ' width: 397px; height: 40px; border-radius: 35px;' } %>
              </div>
              
              <div class="form-group" >
                <%= f.association :location, label: false, prompt: 'Select the location', input_html: { class: 'text-center form-control-custom', style: 'width: 400px; border-radius: 35px;' } %>
              </div>

              <div class="form-group">
                <%= f.input :description, label: false, placeholder: 'Description ...', as: :text, input_html: { class: 'form-control-custom', rows: 4, style: 'width: 400px; border-radius: 11px;' } %>
              </div>
            </div>
          </div>

          <div class="form-group text-center">
            <%= link_to 'Back', add_company_path, class: 'btn btn-secondary' %>
            <%= f.button :submit, class: 'btn btn-primary me-2' %>
          </div>
        <% end %> <!-- End of simple_form_for -->
      </div>
    </div>
  </div>
</div>
